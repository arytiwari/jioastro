# Database
DATABASE_URL=postgresql://user:pass@host:5432/vedic_astro

# Supabase
# Get these from Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://xxx.supabase.co
# Service Role Key (SECRET - used by backend to bypass RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# JWT Secret (for verifying Supabase auth tokens)
SUPABASE_JWT_SECRET=your-jwt-secret-here
# Optional: Anon Key (public key for client-side)
SUPABASE_ANON_KEY=your-anon-public-key-here

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Redis
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_QUERIES_PER_DAY=10

# Feature Flags (Magical 12)
# Enable/disable features independently
# Set to true/false, 1/0, yes/no, on/off
FEATURE_EVIDENCE_MODE=true
FEATURE_LIFE_SNAPSHOT=false
FEATURE_LIFE_THREADS=false
FEATURE_DECISION_COPILOT=false
FEATURE_TRANSIT_PULSE=false
FEATURE_REMEDY_PLANNER=false
FEATURE_ASTROTWIN_GRAPH=false
FEATURE_GUIDED_RITUALS=false
FEATURE_EXPERT_CONSOLE=false
FEATURE_REALITY_CHECK=false
FEATURE_HYPERLOCAL_PANCHANG=false
FEATURE_STORY_REELS=false
